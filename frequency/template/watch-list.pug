extends ./template-part/layout.pug

block title
    title Frequency - Đồng Hồ Nam
    link(rel="stylesheet" href="./css/watch-list.css")

block banner
    .banner
        .banner__overlay
        .banner__content
            h1.banner__content-title ĐỒNG HỒ NAM
            h2.banner__content-subtitle SỰ TỰ TIN TRÊN CỔ TAY NGƯỜI ĐÀN ÔNG HIỆN ĐẠI

block content
    .main
        .container.path
            a.path__link(href="./index.html") TRANG CHỦ
            span.path__divide /
            span Đồng Hồ Nam
            .path__line

        .container.watch
            .row 
                .col-3.watch__option
                    h1.watch__option-title DANH MỤC SẢN PHẨM
                    h2.watch__option-select
                        | Đồng Hồ Nam 
                        i.fas.fa-angle-up
                    ul.watch__option-list 
                        li 
                            span.watch__option-list-items WEIMAR
                        li
                            span.watch__option-list-items DETROIT
                        li
                            span.watch__option-list-items JACKSON
                        li
                            span.watch__option-list-items KASHMIR
                        li
                            span.watch__option-list-items MYKONOS
                        li
                            span.watch__option-list-items COLOSSEUM
                    h2.watch__option-select 
                        | Dây Đồng Hồ 
                        i.fas.fa-angle-up
                    ul.watch__option-list 
                        li
                            span.watch__option-list-items Dây da Genuine
                        li
                            span.watch__option-list-items Dây kim loại
                        li
                            span.watch__option-list-items Dây thép không gỉ
                        li
                            span.watch__option-list-items Dây cao su
                    h2.watch__option-select 
                        | Phụ Kiện
                        i.fas.fa-angle-up
                    ul.watch__option-list 
                        li
                            span.watch__option-list-items Nhẫn nam
                        li
                            span.watch__option-list-items Vòng tay nam
                    h2.watch__option-select Kíck Thước Mặt 
                    .watch__option-size
                        .watch__option-size--number
                            | 32x38mm
                        .watch__option-size--number
                            | 40mm
                        .watch__option-size--number
                            | 42mm
                    h2.watch__option-select  Màu Sắc
                    .watch__option-color
                        input(type="checkbox" id="silver")
                        label(for="silver") Silver
                    .watch__option-color
                        input(type="checkbox" id="rosegold")
                        label(for="rosegold") Rosegold
                    .watch__option-color
                        input(type="checkbox" id="black")
                        label(for="black") Black
                    .watch__option-color
                        input(type="checkbox" id="white")
                        label(for="white") White
                    .watch__option-color
                        input(type="checkbox" id="navy")
                        label(for="navy") Navy
                    .watch__option-color
                        input(type="checkbox" id="grey")
                        label(for="grey") Grey
                    .watch__option-color
                        input(type="checkbox" id="brown")
                        label(for="brown") Brown
                    .watch__option-color
                        input(type="checkbox" id="coffee")
                        label(for="coffee") Coffee
                    .watch__option-color
                        input(type="checkbox" id="sand")
                        label(for="sand") Sand
                    .watch__option-color
                        input(type="checkbox" id="gold")
                        label(for="gold") Gold


