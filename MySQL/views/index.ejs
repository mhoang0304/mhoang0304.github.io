<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="manifest" href="/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <link rel="stylesheet" href="views\style.css">
</head>

<body>

    <div>
        <div class="title">
            <h1>Các loại động vật</h1>
        </div>
        <form action="/add-new" method="POST">
            <input type="text" name="ID" placeholder="ID">
            <input type="text" name="name" placeholder="Tên">
            <input type="text" name="image" placeholder="Ảnh">
            <input type="text" name="weight" placeholder="Cân nặng">
            <input type="text" name="old" placeholder="Tuổi">
            <input type="text" name="sex" placeholder="Giới tính">
            <button type="submit">Thêm thông tin</button>
        </form>
        <form action="/delete" method="Post">
            <input type="text" name="ID" placeholder="Xoá ID">
            <button type="submit">Xoá thẻ</button>
        </form>
        <div class="container container-main">
            <div class="row">
                <%  result.forEach((result, index )=> { %>
                    <div class="col-md-4">
                        <div class="card">
                            <p id="name">
                                <%= result.name %>
                            </p>
                            <div class="image">
                                <img src=" <%= result.image %>">
                            </div>
                            <div class="info">
                                <p>
                                    Cân nặng:
                                    <%= result.weight %>
                                </p>
                                <p>
                                    Tuổi:
                                    <%= result.old %>
                                </p>
                                <p>
                                    Giới tính:
                                    <%= result.sex %>
                                </p>
                            </div>
                            <div class="btn">
                                <button>
                                <a href="/index/<%=result.ID %>">Xem thêm</a>
                                </button>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js " integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj " crossorigin="anonymous "></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js " integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo " crossorigin="anonymous "></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js " integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI " crossorigin="anonymous "></script>
</body>

</html>